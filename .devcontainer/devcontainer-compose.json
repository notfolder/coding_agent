{
    "name": "Coding Agent with Services",
    "dockerComposeFile": "../docker-compose.yml", 
    "service": "coding-agent",
    "workspaceFolder": "/app",
    
    "overrideCommand": false,
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint", 
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-vscode.makefile-tools",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-json"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/coding-agent/bin/python",
                "python.terminal.activateEnvironment": false
            }
        }
    },

    "forwardPorts": [5672, 15672, 8080],
    "portsAttributes": {
        "5672": {
            "label": "RabbitMQ AMQP",
            "onAutoForward": "ignore"
        },
        "15672": {
            "label": "RabbitMQ Management",
            "onAutoForward": "openBrowser"
        },
        "8080": {
            "label": "GitLab",
            "onAutoForward": "ignore" 
        }
    },

    "postCreateCommand": "conda info --envs && echo 'Dev container with services ready!'",

    "remoteUser": "root"
}
