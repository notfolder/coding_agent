{
  "name": "Coding Agent Development",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.dev.yml"
  ],
  "service": "coding-agent-dev",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/coding-agent/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "files.eol": "\n"
      }
    }
  },

  "forwardPorts": [5432, 5672, 15672, 8080, 8081, 8501],
  "portsAttributes": {
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "5672": {
      "label": "RabbitMQ AMQP",
      "onAutoForward": "silent"
    },
    "15672": {
      "label": "RabbitMQ Management",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "GitLab",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "User Config API",
      "onAutoForward": "notify"
    },
    "8501": {
      "label": "Streamlit Admin",
      "onAutoForward": "notify"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "/app"
  },

  "postCreateCommand": "echo 'Development container ready'",
  
  "remoteUser": "root"
}
